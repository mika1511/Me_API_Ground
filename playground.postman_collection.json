{
  "info": {
    "name": "Me-API Playground - Bhumika",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Post Seed data",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "/* Paste your profile JSON here */"
        },
        "url": "{{baseUrl}}/profile"
      }
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/profile"
      }
    },
    {
      "name": "Top Skills",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/skills/top"
      }
    },
    {
      "name": "Search",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/search?q=Java",
          "query": [{ "key": "q", "value": "Java" }]
        }
      }
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" }
  ]
}
